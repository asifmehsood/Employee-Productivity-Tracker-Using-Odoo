<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Screenshot Log Tree View -->
        <record id="screenshot_log_tree_view" model="ir.ui.view">
            <field name="name">screenshot.log.tree</field>
            <field name="model">screenshot.log</field>
            <field name="arch" type="xml">
                <list>
                    <field name="task_id"/>
                    <field name="employee_id"/>
                    <field name="timestamp"/>
                    <field name="active_application"/>
                    <field name="window_title"/>
                    <field name="is_productive" widget="boolean_toggle"/>
                    <field name="image_filename"/>
                </list>
            </field>
        </record>

        <!-- Screenshot Log Form View -->
        <record id="screenshot_log_form_view" model="ir.ui.view">
            <field name="name">screenshot.log.form</field>
            <field name="model">screenshot.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="task_id"/>
                                <field name="employee_id"/>
                                <field name="timestamp"/>
                            </group>
                            <group>
                                <field name="image_filename"/>
                                <field name="file_size"/>
                                <field name="image_type"/>
                            </group>
                        </group>

                        <group string="Activity Context">
                            <group>
                                <field name="active_application"/>
                                <field name="active_window"/>
                                <field name="window_title"/>
                            </group>
                            <group>
                                <field name="is_productive"/>
                                <field name="screen_width"/>
                                <field name="screen_height"/>
                            </group>
                        </group>

                        <group string="Notes">
                            <field name="description" nolabel="1"/>
                        </group>

                        <group string="Screenshot Preview">
                            <field name="screenshot_image" widget="image" options="{'preview_image': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Screenshot Log Search View -->
        <record id="screenshot_log_search_view" model="ir.ui.view">
            <field name="name">screenshot.log.search</field>
            <field name="model">screenshot.log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="task_id"/>
                    <field name="employee_id"/>
                    <field name="image_filename"/>
                    <separator/>
                    <filter name="today" string="Today" domain="[('timestamp', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0, microsecond=0).strftime('%Y-%m-%d %H:%M:%S'))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                        <filter name="group_task" string="Task" context="{'group_by': 'task_id'}"/>
                        <filter name="group_date" string="Date" context="{'group_by': 'timestamp'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Screenshot Log Action -->
        <record id="screenshot_log_action" model="ir.actions.act_window">
            <field name="name">Screenshots</field>
            <field name="res_model">screenshot.log</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Screenshots will be captured automatically based on your settings.
                </p>
            </field>
        </record>

    </data>
</odoo>
